@model IEnumerable<DefCan.Models.Item>



@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>


<form asp-controller="Item" asp-action="Search">

    <style>
        #SignOut {
            position: absolute;
            left: 80%;
        }
    </style>
    <p id="SignOut"> @Html.RouteLink("Signout", new { controller = "Customer", action = "Autherize" }, new { @class = "btn btn-primary btn-small" }) </p>

    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PicUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AslPicUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Audio)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockQty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.PicUrl) *@
                <img src="~/Images/@Html.DisplayFor(modelItem => item.PicUrl)" style="height:150px;width:150px;" />
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.AslPicUrl) *@
                <img src="~/Images/@Html.DisplayFor(modelItem => item.AslPicUrl)" style="height:150px;width:150px;" />
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.Audio) *@
                <audio src="~/Audio/@Html.DisplayFor(modelItem => item.Audio)" controls>  </audio>
            </td>
            <td>
                @*  @Html.ActionLink("Edit", "Edit", new { id=item.ItemID }) |
                    @Html.ActionLink("Details", "Details", new { id=item.ItemID }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.ItemID }) *@
            </td>
            @* <td align="center">@Html.ActionLink("Order", "Order", new { id = item.ItemID }, null) </td>  *@
           @* <td align="center"> @Html.RouteLink("Order", new { controller = "Order", action = "Order" }, new { id = item.ItemID }, null) </td> *@
        </tr>
    }

</table>
