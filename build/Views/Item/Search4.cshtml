@using (Html.BeginForm("Search4", "Item", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <fieldset>

        <div class="editor-field">
            <input id="Audio" title="Upload a product image" type="file" name="file10" />
        </div>
    </fieldset>

    <td>
        <input type="submit" name="Search Audio" value="Search Audio" />

    </td>
}

<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PicUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AslPicUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Audio)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StockQty)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Cost)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Category)
    </td>
    <td>
        @* @Html.DisplayFor(modelItem => item.PicUrl) *@
        <img src="~/Images/@Html.DisplayFor(modelItem => item.PicUrl)" style="height:150px;width:150px;" />
    </td>
    <td>
        @* @Html.DisplayFor(modelItem => item.AslPicUrl) *@
        <img src="~/Images/@Html.DisplayFor(modelItem => item.AslPicUrl)" style="height:150px;width:150px;" />
    </td>
    <td>
        @* @Html.DisplayFor(modelItem => item.Audio) *@
        <audio src="~/Audio/@Html.DisplayFor(modelItem => item.Audio)" controls>  </audio>
    </td>
    <td>
        @*  @Html.ActionLink("Edit", "Edit", new { id=item.ItemID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ItemID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ItemID }) *@
    </td>


   @* <td align="center">@Html.ActionLink("Order", "Order", new { id = item.ItemID }, null) </td> *@

</tr>
    }

</table>
